<Window x:Class="WpfView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="Inventário de Servidores" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Menu" Width="25*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="Gray">
            <TextBlock HorizontalAlignment="Right" Margin="0,14,26,0" TextWrapping="Wrap" Text="Selecione a opção desejada:" VerticalAlignment="Top" Height="16" Width="149"/>
            <Button x:Name="ServerSearch" Content="Consultar Servidores" HorizontalAlignment="Left" Margin="42,37,0,0" VerticalAlignment="Top" Width="116" Height="20"/>
            <Button Content="Adicionar Servidor" Margin="42,66,42,0" VerticalAlignment="Top" Height="20" Click="AddServer_Click"/>
        </StackPanel>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="198,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Bem-vindo ao sistema de Servidores!"/><LineBreak/><Run/></TextBlock>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="177,64,0,0" TextWrapping="Wrap" Text="Para iniciar, selecione uma das opções ao lado." VerticalAlignment="Top"/>

    </Grid>
</Window>
