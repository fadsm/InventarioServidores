<Window x:Class="WpfView.DatacenterView.DatacenterEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView.DatacenterView"
        mc:Ignorable="d"
        Title="DatacenterEdit" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="77,48,0,0" TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Top"/>
        <TextBox x:Name="DatacenterName" HorizontalAlignment="Left" Height="23" Margin="77,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="77,105,0,0" TextWrapping="Wrap" Text="Localizaçao" VerticalAlignment="Top"/>
        <TextBox x:Name="DatacenterLocation" HorizontalAlignment="Left" Height="23" Margin="77,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Confirm" Content="Confirmar" HorizontalAlignment="Left" Margin="77,167,0,0" VerticalAlignment="Top" Width="75" Click="Confirm_Click"/>
        <Button x:Name="Delete" Content="Button" HorizontalAlignment="Left" Margin="77,205,0,0" VerticalAlignment="Top" Width="75" Click="Delete_Click"/>
    </Grid>
</Window>
